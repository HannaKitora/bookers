<h1>Books</h1>

<table>
<% @books.each do |book| %>
  <div class="book-box">
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <tr>
      <td>
        <span class="book-title">
          <%= books.title %>
        </span>
      </td>
      <td>
        <span class="book-body">
          <td><%= @books.body %></td>
        </span>
      </td>
      <td>
        <span>
          <%= link_to 'Show', show_books_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to 'Edit', edit_books_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to 'Destroy', destroy_books_path(book.id) %>
        </span>
      </td>
    </tr>
  </div>
</table>
  
<% end %>

<h2>New Book</h2>

<%= form_with model: @book, url: 'show_book', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  
<% end %>