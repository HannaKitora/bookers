<h1>Books</h1>

<% @books.each do |list| %>

  <p>Title</p>
  <span><%= list[:title] %></span>
  <p>Body</p>
  <span><%= list[:body] %></span>
  <span><%= link_to 'Show', book_path(list.id) %></span>
  <span><%= link_to 'Edit', edit_book_path(list.id) %></span>
  <span><%= link_to 'Destroy', book_destroy_path(list.id) %></span>

  
<% end %>

<h2>New Book</h2>

<%= form_with model: @book, url: '/book', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  
<% end %>