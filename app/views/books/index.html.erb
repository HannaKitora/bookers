<h1>Books</h1>

<table>
<% @books.each do |book| %>
  <div class="book-box">
    <tr>
      <th>Title</th>
        <%=book.title %>
      <th>Body</th>
        <%=book.body %>
    </tr>
    <tr>
      <td>
        <span class="book-title">

        </span>
      </td>
      <td>
        <span class="book-body">

        </span>
      </td>
      <td>
        <span>
          <%= link_to "Show", book_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to 'Edit', edit_book_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </span>
      </td>
    </tr>
  </div>
</table>
  
<% end %>

<h2>New Book</h2>

<%= form_with model: @book do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>


