<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <div class="form">
    <div class="field">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :body %>
      <br>
      <%= f.text_area :body %>
    </div>
  
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  
    <span>
      <%= link_to "Show", book_path(@book.id) %>
    </span>
  
    <span>
      <%= link_to "Back", books_path %>
    </span>
  
  </div>
<% end %>