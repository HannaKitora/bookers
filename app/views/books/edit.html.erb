<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_feild :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
 
  <span>
    <%= link_to Show, books_path(book) %>
  </span>
  
  <span>
    <%= link_to Back, books_path(top) %>
  </span>
  
<% end %>